#!/usr/bin/env node

var commander = require('commander');
var pkg = require('../package.json')

commander
    .version(pkg.version)
    .usage('[command] [options]')
    .command('start [options]', 'start a webpack server for development.')
    .command('build [options]', 'build static pages for production.')
    .parse(process.argv)

process.on('SIGINT', function () {
    commander.runningCommand && commander.runningCommand.kill('SIGINT');
    process.exit(1);
});