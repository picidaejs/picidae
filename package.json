{
  "name": "picidae",
  "version": "2.3.1",
  "private": true,
  "description": "Picidae is a document generator which has gentle experience. :dash:",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "dev": "lerna run --parallel dev",
    "bootstrap": "lerna bootstrap",
    "prerelease": "npm test && lerna run changelog",
    "release": "lerna publish"
  },
  "bin": {
    "picidae": "./bin/pre-picidae.js"
  },
  "files": [
    "lib",
    "bin",
    "theme",
    "exports"
  ],
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/picidaejs/picidae.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/picidaejs/picidae/issues"
  },
  "homepage": "https://github.com/picidaejs/picidae#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.2",
    "babel-cli": "^6.26.0",
    "conventional-changelog-cli": "^1.3.16",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lerna": "^2.7.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "typescript": "^2.8.3"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "test"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.{j,t}s?(x)",
      "**/?(*.)(spec|test).{j,t}s?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
